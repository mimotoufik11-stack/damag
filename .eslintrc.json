{
  "ignore": ["dist", "build", "node_modules", "backend", "release"],
  "files": ["src/**/*.{ts,tsx}"],
  "languageOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "globals": {
      "window": "readonly",
      "document": "readonly",
      "navigator": "readonly",
      "console": "readonly",
      "setTimeout": "readonly",
      "setInterval": "readonly",
      "clearTimeout": "readonly",
      "clearInterval": "readonly"
    }
  },
  "plugins": ["@typescript-eslint", "react"],
  "rules": {
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "warn",
    "@typescript-eslint/no-explicit-any": "off",
    "react/react-in-jsx-scope": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
