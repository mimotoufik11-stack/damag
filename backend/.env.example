# API Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=Dammaj Al-Quran API
VERSION=1.0.0

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=True

# Database (SQLite for development)
DATABASE_URL=sqlite:///./dammaj_quran.db

# PostgreSQL (for production)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=dammaj_quran

# Security
SECRET_KEY=your-secret-key-change-in-production-min-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=5368709120

# AI Services
WHISPER_MODEL=base
WHISPER_LANGUAGE=ar
WHISPER_DEVICE=cpu

TTS_MODEL=tts_models/ar/arabd/tacotron2
TTS_VOICE=default

# FFmpeg
FFMPEG_PATH=ffmpeg
FFPROBE_PATH=ffprobe

# Cache
CACHE_DIR=./cache
MAX_CACHE_SIZE=1073741824

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
